@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<!--End-->
<div class="col-sm-12" style="border:2px solid #FFB63E;border-left:0px;border-right:0px;padding:15px;margin-bottom:20px;color: #0ed364; background:#000;">
    <h1 style="text-align:center;font-weight:bold;">Matches Dashboard</h1>
</div>
<div class="container-fluid  " style="overflow-x:auto;overflow-y:auto">

    <table class="table" id="table_custom">
        <caption>&nbsp;</caption>
        <thead>
            <tr>

                <th>Match&nbsp;ID</th>
                <th>Team&nbsp;One</th>
                <th>Team&nbsp;Two</th>
                
               
                <th>Who&nbsp;Win</th>
                <th>Who&nbsp;Lose</th>
                <th>RoundNo&nbsp;Team1</th>
                <th>RoundNo&nbsp;Team2</th>
                <th >Match&nbsp;Host</th>
                <th>Opponent&nbsp;Team1</th>
                <th>Opponent&nbsp;Team2</th>
                <th >Tournament&nbsp;Id</th>
                <th >Tournament&nbsp;Name</th>
                
                <th>Action</th>

            </tr>
            
        </thead>
        <tbody id="client_nw" class="">
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Team1</td>
                    <td>@x.Team2</td>
                   
                   
                    <td>@x.R_Who_win</td>
                    
                    <td>@x.R_Who_lose</td>
                    <td>@x.RoundNo_Team1</td>
                    <td>@x.RoundNo_Team2</td>
                    <td>@x.R_Match_host</td>
                    
                   
                    <td>@x.T1_Opponent</td>
                    <td>@x.T2_Opponent</td>
                    <td>@x.Tournament_id</td>
                    <td>@x.Tournament_name</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/admin/update_match/@x.Id">Update</a></li>
                                <li><a href="/admin/delete_match/@x.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }


        </tbody>
    </table>

</div>

